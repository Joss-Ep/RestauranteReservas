# Puerto que Render asigna automáticamente, no lo cambies en Render
PORT=3000

# Base de datos Neon (incluye sslmode=require). Ejemplo:
# DATABASE_URL=postgres://USER:PASS@HOST/neondb?sslmode=require
DATABASE_URL=

# Forzar SSL en pg pool (Neon requiere SSL)
PGSSL=true

# Clave para JWT
JWT_SECRET=pon_un_secreto_muy_largo_y_aleatorio

# Orígenes permitidos para CORS (puedes poner * durante desarrollo)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Duración de sesión JWT (opcional)
JWT_EXPIRES_IN=7d
